FC=mpif90
FFLAG = -O2 -ffree-line-length-none
FPPMPI=-cpp -D_MPI
FFLAGS= ${FFLAG} ${FPPMPI}

.SUFFIXES: .f90
.PHONY: clean

GLOB_INC:=$(shell pkg-config --cflags scifor )

OBJS=ASSERTING.o

all: $(OBJS) NORMAL REPLICA GENERAL # HYBRID
	@echo "all done"


NORMAL:
	make -C ./ED_$@

NONSU2:
	make -C ./ED_$@

REPLICA:
	make -C ./ED_$@

GENERAL:
	make -C ./ED_$@

.f90.o:
	$(FC) $(FFLAGS) -c $< ${GLOB_INC}

clean:
	rm -rf *.mod *.o 

